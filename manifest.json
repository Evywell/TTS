{
  "manifest_version": 2,
  "name": "Application Certification G Suite",
  "description": "Lien vers le site Web Certification G Suite",
  "version": "1.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": [ "src/responsivevoice.js", "src/events.js" ]
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.fr/*"],
      "js": ["src/responsivevoice.js", "src/voice.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "unlimitedStorage",
    "notifications",
    "contextMenus"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}